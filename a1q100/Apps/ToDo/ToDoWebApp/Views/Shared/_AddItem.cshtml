@model Domain.Models.ToDoItem
@using System.Web.Optimization
@using (Html.BeginForm("Create", "ToDo", new { ReturnUrl = ViewBag.ReturnUrl, }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="input-group width">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control margin-top text-center", placeholder = "To do List", style = "width:98%;" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            <span class="input-group-btn">
                <button type="submit" class="btn btn-primary margin-top" style='border-radius: 2px;'>+</button>
            </span>
        </div>
    </div>
}
@Scripts.Render("~/bundles/jqueryval")



